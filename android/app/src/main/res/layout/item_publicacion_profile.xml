<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/cremita"
    android:id="@+id/profile_publication_card">
    <ImageView
        android:id="@+id/idPublicacion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="right"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/idDistancia"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/idDescripcion"
        android:layout_width="162dp"
        android:layout_height="92dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/contactoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="5dp"
        android:text="@string/contactoTextView"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/idContacto"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/idFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

